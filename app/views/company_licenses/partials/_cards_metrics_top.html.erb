<div id="metrics-top">

  <div class="metrics-card">
    <div class="card-top-text">Applications</div>
    <div class="card-bottom-text"><%= @total_applications %></div>
  </div>

  <div class="metrics-card">
    <div class="card-top-text">Monthly spend</div>
    <div class="card-bottom-text"><%= number_to_currency(@spend_current_month, unit: "€ ", separator: ",", delimiter: ".", precision: 0) %><span><%= @spend_trend_month %>%</span></div>
  </div>

  <div class="metrics-card">
    <div class="card-top-text">Spend last 12 months</div>
    <div class="card-bottom-text"><%= number_to_currency(@spend_one_year_back, unit: "€ ", separator: ",", delimiter: ".", precision: 0) %></div>
  </div>

  <div class="metrics-card">
    <div class="card-top-text">Utilization</div>
    <div class="card-bottom-text"><%= @utilization %>%</div>
  </div>

</div>
